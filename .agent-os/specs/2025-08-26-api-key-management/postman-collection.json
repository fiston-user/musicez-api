{
  "info": {
    "name": "API Key Management API Collection",
    "description": "Postman collection for testing API Key Management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "apiKeyId",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@musicez.com\",\n  \"password\": \"AdminPassword123!\",\n  \"name\": \"Admin User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@musicez.com\",\n  \"password\": \"AdminPassword123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.tokens.accessToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "API Key Management",
      "item": [
        {
          "name": "Create API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Spotify Web API\",\n  \"key\": \"spotify_api_key_example_123456789\",\n  \"active\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "api-keys"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('apiKeyId', response.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get All API Keys",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "api-keys"]
            }
          }
        },
        {
          "name": "Get API Key by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/api-keys/{{apiKeyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "api-keys", "{{apiKeyId}}"]
            }
          }
        },
        {
          "name": "Update API Key",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Spotify Web API - Updated\",\n  \"active\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/api-keys/{{apiKeyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "api-keys", "{{apiKeyId}}"]
            }
          }
        },
        {
          "name": "Create OpenAI API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"OpenAI GPT-4 API\",\n  \"key\": \"sk-openai_example_key_abcdef123456789\",\n  \"active\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "api-keys"]
            }
          }
        },
        {
          "name": "Delete API Key",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/api-keys/{{apiKeyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "api-keys", "{{apiKeyId}}"]
            }
          }
        }
      ]
    }
  ]
}