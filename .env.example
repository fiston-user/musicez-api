# Node Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/musicez_dev?schema=public
SHADOW_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/musicez_shadow?schema=public

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# External APIs (to be configured later)
OPENAI_API_KEY=
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Monitoring (optional)
SENTRY_DSN=

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Application
APP_NAME=MusicEZ API
APP_VERSION=1.0.0